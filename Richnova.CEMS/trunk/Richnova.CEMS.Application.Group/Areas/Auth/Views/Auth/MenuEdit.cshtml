<script type="text/javascript">
    $(function () {
        menu.dialogOpen(menu.editRow);
        $('#pid-tree').combotree('loadData', menu.combotreeData);
    });
 </script>
<div id="menu-dlg" style="width:600px;height:420px;position:relative">
    <form id="menu-form" class="easyui-form" style="padding: 20px;">
        <input name="Id" type="hidden" />
        <input name="Version" type="hidden" />
        <div class="view-title">@Lang.Common.Form_Detail</div>
        <table id="menu-edit" class="edit-table column2">
            <tr>
                <th>菜单名称:</th>
                <td><input name="Name" class="easyui-validatebox" data-options="required:true" /></td>
            </tr>
            <tr>
                <th>上级菜单:</th>
                <td><input name="ParentId" id="pid-tree" class="easyui-combotree" /></td>
            </tr>
            <tr>
                <th>图标:</th>
                <td><input name="Icon" class="easyui-validatebox" type="text" /></td>
            </tr>
            <tr>
                <th>菜单地址:</th>
                <td><input name="Url" class="easyui-validatebox"></td>
            </tr>
            <tr>
                <th>是否隐藏:</th>
                <td style="text-align: left;">
                    <input type="radio" name="IsHidden" value="true" style="width: auto" />是
                    <input type="radio" name="IsHidden" checked value="false" style="width: auto" />否
                </td>
            </tr>
            <tr>
                <th>排序:</th>
                <td>
                    <input name="OrderIndex" class="easyui-numberbox" />
                </td>
            </tr>
            <tr>
                <th>备注:</th>
                <td>
                    <textarea name="Comments" class="textarea1"></textarea>
                </td>
            </tr>
        </table>

        <div class="view-title">@Lang.Common.Form_Additional</div>
        <table class="view-table">
            <tr>
                <th>创建日期:</th>
                <td><input name="CreatedAt" readonly="readonly" /></td>
                <th>创建人:</th>
                <td><input name="CreatedBy" readonly="readonly" /></td>
            </tr>
            <tr>
                <th>修改日期:</th>
                <td><input name="UpdatedAt" readonly="readonly" /></td>
                <th>修改人:</th>
                <td><input name="UpdatedBy" readonly="readonly"></td>
            </tr>
        </table>
    </form>
</div>
